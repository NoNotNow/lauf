{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Angular: npm start",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/usr/bin/npm",
            "runtimeArgs": ["start"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Angular: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/src/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Angular: Debug",
            "configurations": [
                "Angular: npm start",
                "Angular: Chrome"
            ],
            "stopAll": true
        }
    ]
}