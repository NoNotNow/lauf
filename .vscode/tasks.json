{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ng: serve",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(.*)?⠙.*",
                    "endsPattern": "^(.*)?✔.*Compiled successfully|Build complete"
                }
            }
        }
    ]
}
